{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=PokedexDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtIssuerOptions": {
    "Issuer": "webApi",
    "Audience": "http://localhost:46160/"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "HttpClientAdapterSettings": {
    "PokemonByNameEndpoint": "https://pokeapi.co/api/v2/pokemon/{0}",
    "PokemonListEndpoint": "https://pokeapi.co/api/v2/pokemon?limit={0}&offset={1}"
  },
  "CacheSettings": {
    "CacheFolder": "PokemonCache",
    "ListCacheKey": "pokemonList"
  }
}